<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign.SignInActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img_top_bg"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/edtSigninID"
        android:layout_width="327dp"
        android:layout_height="52dp"
        android:hint="아이디"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="257dp"
        android:background="@drawable/sign_in_box"
        android:paddingStart="10pt"/>

    <EditText
        android:id="@+id/edtSigninPW"
        android:layout_width="327dp"
        android:layout_height="52dp"
        android:hint="비밀번호"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtSigninID"
        android:layout_marginTop="24dp"
        android:background="@drawable/sign_in_box"
        android:paddingStart="10pt"/>

    <TextView
        android:id="@+id/tvSigninPWLose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호를 잊어버렸나요?"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toBottomOf="@id/edtSigninPW"
        android:layout_marginTop="14dp"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnSigninLogin"
        android:layout_width="327dp"
        android:layout_height="52dp"
        android:background="#FF5722"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtSigninPW"
        android:layout_marginTop="63dp"
        android:text="로그인"
        android:textColor="#ffffff"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tvSigninSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/btnSigninLogin"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>