<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign.SignInActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_top_bg"
        android:scaleType="fitXY"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/plot_symbollogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txtLogin"
        android:layout_marginRight="41dp"/>

    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="15sp"
        android:text="Log-in"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="128dp"/>

    <EditText
        android:id="@+id/edtSigninID"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:hint="아이디"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="257dp"
        android:background="@drawable/sign_in_box"
        android:paddingStart="10pt"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/edtSigninPW"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:hint="비밀번호"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtSigninID"
        android:layout_marginTop="24dp"
        android:background="@drawable/sign_in_box"
        android:paddingStart="10pt"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:inputType="textPassword"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/tvSigninPWLose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="비밀번호를 잊어버렸나요?"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/edtSigninPW"
        app:layout_constraintTop_toBottomOf="@id/edtSigninPW" />

    <Button
        android:id="@+id/btnSigninLogin"
        android:layout_width="327dp"
        android:layout_height="52dp"
        android:background="#FF5722"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtSigninPW"
        android:layout_marginTop="63dp"
        android:text="로그인"
        android:textColor="#ffffff"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tvSigninSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/btnSigninLogin"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>