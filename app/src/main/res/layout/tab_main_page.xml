<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="292dp"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_round_corner">

    <TextView
        android:id="@+id/tvMainFirstTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How To Train Your Dragon:\nThe Hidden World"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginTop="81dp"
        android:textSize="16sp"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/tvMainFirstStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.6"
        android:textSize="12sp"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginTop="125dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="34dp"
        android:layout_marginTop="130dp"/>

    <TextView
        android:id="@+id/tvMainFirstTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1h 44min"
        android:textSize="12sp"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="125dp"
        android:layout_marginStart="160dp"/>

    <ImageView
        android:id="@+id/btnMainFirstPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/btnMainFirstTag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animation"
        android:textSize="8sp"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/btnMainFirstTag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animation"
        android:textSize="8sp"
        android:textColor="#ffffff"
        app:layout_constraintStart_toEndOf="@id/btnMainFirstTag1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/btnMainFirstTag3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animation"
        android:textSize="8sp"
        android:textColor="#ffffff"
        app:layout_constraintStart_toEndOf="@id/btnMainFirstTag2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
