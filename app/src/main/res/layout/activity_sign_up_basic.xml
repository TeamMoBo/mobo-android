<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign.SignUpBasicActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="1034dp"
            android:background="@drawable/an_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:src="@drawable/an_ic_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvSignup_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="14dp"
                android:lineSpacingExtra="9sp"
                android:text="회원 가입"
                android:textColor="#ffffff"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="103dp"
                android:src="@drawable/an_ic_progessbar_first"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="328dp"
                android:layout_height="863dp"
                android:layout_marginTop="147dp"
                android:background="@drawable/sign_up_box"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvSignupTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="기본 정보 입력"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="#000000"/>


                <EditText
                    android:id="@+id/edtSignupGenre"
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="35dp"
                    android:background="@null"
                    android:hint="김영화"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvSignupTitle" />

                <TextView
                    android:id="@+id/tvSignupGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="81dp"
                    android:layout_marginEnd="18dp"
                    android:text="이름"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="#000000"/>

                <View
                    android:layout_width="313dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="9dp"
                    android:background="#f2f2f2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edtSignupGenre" />

                <EditText
                    android:id="@+id/edtSignupPoint"
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="159dp"
                    android:background="@null"
                    android:hint="바보"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvSignupPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="160dp"
                    android:layout_marginEnd="18dp"
                    android:text="닉네임"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="#000000"/>

                <View
                    android:layout_width="313dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="9dp"
                    android:background="#f2f2f2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edtSignupPoint" />

                <EditText
                    android:id="@+id/edtSignupInterest"
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="238dp"
                    android:background="@null"
                    android:hint="숫자로만 입력하세요"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvSignupInterest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="239dp"
                    android:layout_marginEnd="18dp"
                    android:inputType="number"
                    android:text="나이"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="#000000"/>

                <View
                    android:layout_width="313dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="9dp"
                    android:background="#f2f2f2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edtSignupInterest" />

                <EditText
                    android:id="@+id/edtSignupID"
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="317dp"
                    android:background="@null"
                    android:hint="5~15 사이의 영문 아이디"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvSignupID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="318dp"
                    android:layout_marginEnd="18dp"
                    android:inputType="number"
                    android:text="아이디"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="#000000"/>

                <View
                    android:layout_width="313dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="9dp"
                    android:background="#f2f2f2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edtSignupID" />

                <EditText
                    android:id="@+id/edtSignupPW"
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="398dp"
                    android:background="@null"
                    android:hint="●●●●●●●"
                    android:inputType="textPassword"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvSignupPW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="397dp"
                    android:layout_marginEnd="18dp"
                    android:inputType="number"
                    android:text="비밀번호"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="#000000"/>

                <View
                    android:layout_width="313dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="9dp"
                    android:background="#f2f2f2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edtSignupPW" />

                <EditText
                    android:id="@+id/edtSignupUniv"
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="475dp"
                    android:background="@null"
                    android:hint="홍익대학교"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvSignupUniv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="476dp"
                    android:layout_marginEnd="18dp"
                    android:inputType="number"
                    android:text="학교/직장"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="#000000"/>

                <View
                    android:layout_width="313dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="9dp"
                    android:background="#f2f2f2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edtSignupUniv" />

                <EditText
                    android:id="@+id/edtSignupMajor"
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="554dp"
                    android:background="@null"
                    android:hint="산업디자인학과"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvSignupMajor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="555dp"
                    android:layout_marginEnd="18dp"
                    android:inputType="number"
                    android:text="학과/직책"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="#000000"/>

                <View
                    android:layout_width="313dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="9dp"
                    android:background="#f2f2f2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edtSignupMajor" />

                <EditText
                    android:id="@+id/edtSignupKakao"
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="633dp"
                    android:background="@null"
                    android:hint="brothermin"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvSignupKakao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="634dp"
                    android:layout_marginEnd="18dp"
                    android:inputType="number"
                    android:text="카카오톡 ID"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="#000000"/>

                <View
                    android:layout_width="313dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="9dp"
                    android:background="#f2f2f2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edtSignupKakao" />

                <EditText
                    android:id="@+id/edtSignupSay"
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="712dp"
                    android:background="@null"
                    android:hint="같이 영화 보실래요?"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvSignupSay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="713dp"
                    android:layout_marginEnd="18dp"
                    android:inputType="number"
                    android:text="같이 영화보게 될 사람에게 한마디!"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="#000000"/>

                <View
                    android:layout_width="313dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="9dp"
                    android:background="#f2f2f2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edtSignupSay" />

                <Button
                    android:id="@+id/btnSignupNext"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:background="@drawable/an_ic_next_btn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="24dp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>